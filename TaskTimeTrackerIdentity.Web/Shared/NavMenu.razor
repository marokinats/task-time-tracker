@using Microsoft.EntityFrameworkCore;
@namespace TaskTimeTrackerIdentity.Web.Shared

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-secondary border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">TaskTimeTracker</a>
        <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" @onclick="ToggleNavMenu" id="navbarSupportedContent">
            <ul class="navbar-nav flex-grow-1 align-items-center">
                <AuthorizeView>
                    <Authorized>
                        <NavLinkSpace />
                    </Authorized>
                </AuthorizeView>
                
                <LoginDisplay />
            </ul>
        </div>
    </div>

</nav>

@code {
    bool collapseNavMenu = true;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}

